@{
  Layout = "_Layout";
}
<div class="container">
  @model Registrar.Models.Student

  <h2>Edit Student Information</h2>
  <hr />
  <h4>Edit this Student Profile: @Html.DisplayFor(model => model.StudentName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StudentId)

    @Html.LabelFor(model => model.StudentName)
    @Html.TextBoxFor(model => model.StudentName)

    @Html.LabelFor(model => model.EnrollmentDate)
    @Html.TextBoxFor(model => model.EnrollmentDate, new {type="date"} )

    @Html.Label("Enroll in Course")
    @Html.DropDownList("CourseId")

    <input type="submit" value="Save" />
  }
  <p>@Html.ActionLink("Back to Student list", "Index")</p>
</div>