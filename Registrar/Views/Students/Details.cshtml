@{
  Layout = "_Layout";
}
<div class="container">
  @model Registrar.Models.Student

  <h2>Student Details</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.StudentName): @Html.DisplayFor(model => model.StudentName)<h3>
  <h3>@Html.DisplayNameFor(model => model.EnrollmentDate): @Html.DisplayFor(model => model.EnrollmentDate)<h3>
  @if(@Model.Courses.Count == 0)
  {
    <p>This student is not enrolled in any classes.</p>
  }
  else
  {
    <h3>Courses Currently Enrolled:</h3>
    <ul>
      @foreach (var join in Model.Courses)
      {
        <li>@join.Course.CourseName, @join.Course.CourseNumber</li>
        @using (Html.BeginForm("DeleteCourse", "Students"))
        {
          @Html.Hidden("joinId", @join.CourseStudentId)
          <input type="submit" value="Delete" label="Unenroll"/>
        }
      }
    </ul>
  }
  <p>@Html.ActionLink("Back to list", "Index")</p>
  <p>@Html.ActionLink("Edit Student", "Edit", new { id = Model.StudentId })</p>
  <p>@Html.ActionLink("Unenroll Student", "Delete", new { id = Model.StudentId })</p>
  <p>@Html.ActionLink("Add a Course", "AddCourse", new { id = Model.StudentId })</p>
</div>