@{
  Layout = "_Layout";
}
@using Registrar.Models
@model Registrar.Models.Department;

<div class="container">
  <h2>Department Details</h2>

  <h3>@Html.DisplayFor(model => model.DepartmentName)</h3>

  @if(@Model.Courses.Count == 0)
  {
    <p>No courses belong to this Department.</p>
  }
  else
  {
    <h4>Courses in Department:</h4>
    <ul>
      @foreach(Course course in Model.Courses)
      {
        <li>@Html.ActionLink(@course.CourseName, "Details", "Courses", new { id = course.CourseId })</li>
      }
    </ul>
  }
  <br><h4>@Html.ActionLink("Add a Course", "AddCourse","Departments", new { id = Model.DepartmentId })</h4>
  <h4>@Html.ActionLink("Back to departments", "Index")</h4>
  <h4>@Html.ActionLink("Edit Department", "Edit", new { id = Model.DepartmentId })</h4>
  <h4>@Html.ActionLink("Remove Department", "Delete", new { id = Model.DepartmentId })</h4>

</div>