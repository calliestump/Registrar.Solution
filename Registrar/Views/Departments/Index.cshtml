@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Department>;

<h1>Departments</h1>

@if (@Model.Count == 0)
{
  <h3>No departments have been added to the University yet.</h3>
}

@foreach (Department department in Model)
{
  <li>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId })</li>
}
<p>@Html.ActionLink("Add a new department", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>