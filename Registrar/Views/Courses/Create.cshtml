@{
  Layout = "_Layout";
}
<div class="container" class="body">
  @model Registrar.Models.Course

  <h2>Add a new course</h2>
  <hr />
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.CourseName)<br>
    @Html.TextBoxFor(model => model.CourseName)<br><br>
    @Html.LabelFor(model => model.CourseNumber)<br>
    @Html.TextBoxFor(model => model.CourseNumber)<br><br>
    <input type="submit" value="Add new course"/>
  }
  <br><p>@Html.ActionLink("Show all courses", "Index")</p>
</div>