@{
  Layout = "_Layout";
}
<div class="container"> 
  @using Registrar.Models;
  @model List<Registrar.Models.Course>;

  <h1>Courses</h1>

  @if (@Model.Count == 0)
  {
    <h3>No courses have been added yet.</h3>
  }

  @foreach (Course course in Model)
  {
    <li>@Html.ActionLink($"{course.CourseName}", "Details", new { id = course.CourseId })</li>
    @using (Html.BeginForm("Delete", "Courses", FormMethod.Get))
      {
        @Html.Hidden("id", @course.CourseId)
        <input type="submit" value="Delete"/>
      }
  }
  <p>@Html.ActionLink("Add new course", "Create")</p>

  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>